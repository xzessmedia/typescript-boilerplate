{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "typeRoots": ["node_modules/@types"],
        "outDir": "dist",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["typings.d.ts", "src/**/*.ts", "src/**/*.json"],
    "exclude": ["node_modules"]
}
